<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Anton&family=Qahiri&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="index.css">
    <title>Online Editor</title>
</head>
<body>
    <h1 class="heading">ONLINE EDITOR</h1>
    <h2 class="subheading">WELCOME</h2>
    <form action="/" method="POST">
        
        <div class="select">
            <p class="desc">SELECT LANGUAGE</p>
        <select  class="selectbox" name="language">
            <option value="python3">Python3</option>
        </select></div>
        <p class="text1">ENTER YOUR CODE :</p>
        <textarea class="textarea1" placeholder="    Your Code" name="code"><%=code%></textarea>
        <br>
        <p class="text2">ENTER YOUR STDIN :</p>
        <textarea class="textarea2" placeholder="    Stdin " name="stdin"><%=stdin%></textarea>
        <div class="btndiv">
        <button class="btn" type="submit">Run</button>
    </div>
    <p class="text2"> YOUR STDOUT :</p>
        <textarea class="textarea3" name="stdout" readonly><%=stdout%></textarea>
    </form>
</body>
